<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bg_gradient_primary">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/spacing_large"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_name"
            android:textSize="@dimen/text_size_title"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:layout_marginBottom="@dimen/spacing_small" />

        <TextView
            android:id="@+id/cardCounter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1 / 5"
            android:textSize="@dimen/text_size_subtitle"
            android:textColor="@color/white_70"
            android:background="@drawable/bg_counter"
            android:paddingHorizontal="@dimen/spacing_medium"
            android:paddingVertical="@dimen/spacing_small" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingHorizontal="@dimen/spacing_large"
        android:paddingBottom="@dimen/spacing_medium">

        <TextView
            android:id="@+id/cardLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Question"
            android:textSize="@dimen/text_size_label"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:layout_marginBottom="@dimen/spacing_medium"
            android:background="@drawable/bg_label"
            android:paddingHorizontal="@dimen/spacing_medium"
            android:paddingVertical="@dimen/spacing_small" />

        <androidx.cardview.widget.CardView
            android:id="@+id/flashcardView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            app:cardCornerRadius="@dimen/card_corner_radius"
            app:cardElevation="@dimen/elevation_high"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?android:attr/selectableItemBackground"
            android:background="@drawable/bg_card_front">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fillViewport="true"
                android:scrollbars="none">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="@dimen/spacing_extra_large"
                    android:minHeight="300dp">

                    <TextView
                        android:id="@+id/cardContent"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="What is the capital of France?"
                        android:textSize="@dimen/text_size_card_content"
                        android:textColor="@color/text_primary"
                        android:textAlignment="center"
                        android:lineSpacingMultiplier="1.3"
                        android:gravity="center" />

                </LinearLayout>

            </ScrollView>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/white"
        android:paddingTop="@dimen/spacing_large"
        android:paddingBottom="@dimen/spacing_large"
        android:paddingHorizontal="@dimen/spacing_large"
        app:cardElevation="@dimen/elevation_medium">

        <Button
            android:id="@+id/showAnswerButton"
            android:layout_width="match_parent"
            android:layout_height="@dimen/button_height_large"
            android:text="Show Answer"
            android:textSize="@dimen/text_size_button"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:background="@drawable/button_primary"
            android:layout_marginBottom="@dimen/spacing_medium"
            android:elevation="@dimen/elevation_low" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="@dimen/spacing_medium">

            <ImageButton
                android:id="@+id/previousButton"
                android:layout_width="0dp"
                android:layout_height="@dimen/button_height_medium"
                android:layout_weight="1"
                android:text="‹ Previous"
                android:textColor="@color/white"
                android:background="@drawable/button_secondary"
                android:layout_marginEnd="@dimen/spacing_small"
                android:src="@drawable/ic_arrow_left"
                android:contentDescription="Previous card" />

            <ImageButton
                android:id="@+id/nextButton"
                android:layout_width="0dp"
                android:layout_height="@dimen/button_height_medium"
                android:layout_weight="1"
                android:text="Next ›"
                android:textColor="@color/white"
                android:background="@drawable/button_secondary"
                android:layout_marginStart="@dimen/spacing_small"
                android:src="@drawable/ic_arrow_right"
                android:contentDescription="Next card" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/addCardButton"
                android:layout_width="0dp"
                android:layout_height="@dimen/button_height_medium"
                android:layout_weight="1"
                android:text="Add"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_button_small"
                android:background="@drawable/button_success"
                android:layout_marginEnd="@dimen/spacing_tiny"
                android:drawableTop="@drawable/ic_add"
                android:drawablePadding="@dimen/spacing_tiny" />

            <Button
                android:id="@+id/editCardButton"
                android:layout_width="0dp"
                android:layout_height="@dimen/button_height_medium"
                android:layout_weight="1"
                android:text="Edit"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_button_small"
                android:background="@drawable/button_warning"
                android:layout_marginHorizontal="@dimen/spacing_tiny"
                android:drawableTop="@drawable/ic_edit"
                android:drawablePadding="@dimen/spacing_tiny" />

            <Button
                android:id="@+id/deleteCardButton"
                android:layout_width="0dp"
                android:layout_height="@dimen/button_height_medium"
                android:layout_weight="1"
                android:text="Delete"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_button_small"
                android:background="@drawable/bg_button_danger"
                android:layout_marginStart="@dimen/spacing_tiny"
                android:drawableTop="@drawable/ic_delete"
                android:drawablePadding="@dimen/spacing_tiny" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>