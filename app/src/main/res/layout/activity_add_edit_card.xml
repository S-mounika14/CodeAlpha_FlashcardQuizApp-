<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background_light">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/primary"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />

    </com.google.android.material.appbar.AppBarLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/spacing_large">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Question"
                android:textSize="@dimen/text_size_section_header"
                android:textColor="@color/text_primary"
                android:textStyle="bold"
                android:layout_marginBottom="@dimen/spacing_medium" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="@dimen/card_corner_radius"
                app:cardElevation="@dimen/elevation_low"
                android:layout_marginBottom="@dimen/spacing_small">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <EditText
                        android:id="@+id/questionEditText"
                        android:layout_width="match_parent"
                        android:layout_height="120dp"
                        android:hint="Enter your question here..."
                        android:gravity="top|start"
                        android:padding="@dimen/spacing_medium"
                        android:background="@android:color/white"
                        android:textSize="@dimen/text_size_body"
                        android:textColor="@color/text_primary"
                        android:inputType="textMultiLine|textCapSentences"
                        android:maxLines="8"
                        android:scrollbars="vertical" />

                    <TextView
                        android:id="@+id/characterCountQuestion"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0/500"
                        android:textSize="@dimen/text_size_caption"
                        android:textColor="@color/text_secondary"
                        android:layout_gravity="end"
                        android:padding="@dimen/spacing_small" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Answer"
                android:textSize="@dimen/text_size_section_header"
                android:textColor="@color/text_primary"
                android:textStyle="bold"
                android:layout_marginTop="@dimen/spacing_large"
                android:layout_marginBottom="@dimen/spacing_medium" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="@dimen/card_corner_radius"
                app:cardElevation="@dimen/elevation_low"
                android:layout_marginBottom="@dimen/spacing_small">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <EditText
                        android:id="@+id/answerEditText"
                        android:layout_width="match_parent"
                        android:layout_height="120dp"
                        android:hint="Enter the answer here..."
                        android:gravity="top|start"
                        android:padding="@dimen/spacing_medium"
                        android:background="@android:color/white"
                        android:textSize="@dimen/text_size_body"
                        android:textColor="@color/text_primary"
                        android:inputType="textMultiLine|textCapSentences"
                        android:maxLines="8"
                        android:scrollbars="vertical" />

                    <TextView
                        android:id="@+id/characterCountAnswer"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0/500"
                        android:textSize="@dimen/text_size_caption"
                        android:textColor="@color/text_secondary"
                        android:layout_gravity="end"
                        android:padding="@dimen/spacing_small" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="@dimen/card_corner_radius"
                app:cardElevation="@dimen/elevation_low"
                android:layout_marginTop="@dimen/spacing_large"
                app:cardBackgroundColor="@color/accent_light">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/spacing_medium">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="ðŸ’¡ Tips for Better Flashcards"
                        android:textSize="@dimen/text_size_body"
                        android:textColor="@color/accent_dark"
                        android:textStyle="bold"
                        android:layout_marginBottom="@dimen/spacing_small" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="â€¢ Keep questions clear and specific\nâ€¢ Use your own words for better retention\nâ€¢ Include examples when helpful\nâ€¢ Break complex topics into smaller cards"
                        android:textSize="@dimen/text_size_small"
                        android:textColor="@color/accent_dark"
                        android:lineSpacingMultiplier="1.2" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/white"
        android:padding="@dimen/spacing_large"
        android:elevation="@dimen/elevation_medium">

        <Button
            android:id="@+id/cancelButton"
            android:layout_width="0dp"
            android:layout_height="@dimen/button_height_large"
            android:layout_weight="1"
            android:text="Cancel"
            android:textColor="@color/text_secondary"
            android:textSize="@dimen/text_size_button"
            android:background="@drawable/bg_button_outline"
            android:layout_marginEnd="@dimen/spacing_medium" />

        <Button
            android:id="@+id/saveButton"
            android:layout_width="0dp"
            android:layout_height="@dimen/button_height_large"
            android:layout_weight="1"
            android:text="Save Card"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_button"
            android:textStyle="bold"
            android:background="@drawable/button_primary"
            android:layout_marginStart="@dimen/spacing_medium" />

    </LinearLayout>

</LinearLayout>